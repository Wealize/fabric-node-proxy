{
  "name": "fabric-node-proxy",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "description": "Hyperledger Fabric Proxy",
  "main": "index.ts",
  "scripts": {
    "test": "DOT_ENV_FILEPATH=.env_test jest",
    "test:generate-output": "DOT_ENV_FILEPATH=.env_test jest --json --outputFile=jest-test-results.json",
    "coverage": "DOT_ENV_FILEPATH=.env_test jest --coverage",
    "test-with-coverage": "DOT_ENV_FILEPATH=.env_test jest --coverage && cat ./coverage/lcov.info | codacy-coverage",
    "build": "webpack --config webpack.config.js",
    "start": "node --inspect=5858 -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon"
  },
  "dependencies": {
    "@types/webpack": "^4.41.0",
    "aws-sdk": "^2.564.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fabric-ca-client": "^1.4.4",
    "fabric-client": "^1.4.4",
    "fabric-network": "^1.4.4",
    "morgan": "^1.9.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-dev-server": "^3.9.0",
    "webpack-node-externals": "^1.7.2"
  },
  "author": "The Neon Project",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.8",
    "@types/webpack-dev-server": "^3.4.0",
    "codacy-coverage": "^3.4.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "webpack-cli": "^3.3.10"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  }
}
